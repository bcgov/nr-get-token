{
  "name": "nr-get-token-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Natural Resources Get Token",
  "author": "NR Common Service Showcase <NR.CommonServiceShowcase@gov.bc.ca>",
  "scripts": {
    "build": "echo Nothing to build",
    "serve": "nodemon ./bin/www",
    "start": "node ./bin/www",
    "lint": "node_modules/.bin/eslint . --no-fix --ignore-pattern 'node_modules' --ext .js",
    "lint:fix": "node_modules/.bin/eslint . --fix --ignore-pattern 'node_modules' --ext .js",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "test": "node_modules/.bin/jest --verbose",
    "clean": "rm -rf coverage dist",
    "pretest": "npm run lint",
    "purge": "rm -rf node_modules",
    "rebuild": "npm run clean && npm run build",
    "reinstall": "npm run purge && npm install"
  },
  "homepage": "https://github.com/bcgov/nr-get-token",
  "dependencies": {
    "axios": "^0.19.1",
    "axios-oauth-client": "^1.2.1",
    "axios-token-interceptor": "^0.1.0",
    "config": "^3.2.5",
    "cryptico-js": "^1.1.0",
    "express": "^4.17.0",
    "express-session": "^1.17.0",
    "express-validator": "^6.3.1",
    "generate-password": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "npmlog": "^4.1.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-openidconnect": "0.0.2",
    "pg": "^7.17.1",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.17.0",
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "_": false
    },
    "parserOptions": {
      "ecmaVersion": 9
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/docs/*.*",
      "!src/migrations/*.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/nr-get-token.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/nr-get-token/issues"
  }
}
